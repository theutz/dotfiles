#:schema https://jj-vcs.github.io/jj/latest/config-schema.json

[user]
name = "{{ .gpg.name }}"
email = "{{ .gpg.email }}"

[ui]
default-command = "status"
diff-editor = ":builtin"
pager = ":builtin"

[aliases]
gp = ['git', 'push']
gf = ["git", "fetch"]
bc = ["bookmark", "create"]
bm = ["bookmark", "move"]
d = ["desc", "-m"]
c = ["commit", "-m"]
s = ["split"]
gh = ["log", "-r", "git_head()", "-T", "local_bookmarks", "-G"]
pr = ["util", "exec", "--", "nu", "-c", """
  gh pr create -H (jj log -r 'git_head()' -T local_bookmarks -G)
"""]
pr-m = ["util", "exec", "--", "nu", "-c", """
  gh pr merge (jj log -r 'git_head()' -T local_bookmarks -G)
"""]

[signing]
behavior = "own"
backend = "gpg"
key = "{{ .gpg.signingKey }}"
