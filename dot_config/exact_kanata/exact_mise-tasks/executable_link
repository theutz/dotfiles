#!/usr/bin/env nu
# [MISE] tools={ nushell = "latest" }
# [MISE] description="Link launch daemons"

def main [] {
	glob LaunchDaemons/*
	| each {
	  let from = [$env.PWD $in] | path join
		let to = $in | path basename | [(char path_sep) Library LaunchDaemons $in] | path join
		^sudo ln -sf $from $to
	}
}
