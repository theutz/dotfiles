[[mgr.prepend_keymap]]
on = "q"
run = "close"
desc = "Close the current tab, or quit yazi"

[[mgr.prepend_keymap]]
on = "e"
run = 'shell "hx" --block'
desc = "Open helix with PWD set to current dir (not selection)"

[[mgr.prepend_keymap]]
on = "!"
run = '''
shell 'YAZI_FILES="$@" {{ .nushell.exe }}' --block --confirm
'''
desc = "Open shell here"

[[mgr.prepend_keymap]]
on = ["g", "l"]
run = 'shell "{{ .mise.exe }} exec lazygit -- lazygit" --block --confirm'
desc = "Open lazygit here"

[[mgr.prepend_keymap]]
on = ["g", "j"]
run = 'shell "{{ .mise.exe }} exec jjui -- jjui" --block --confirm'
desc = "Open JJUI here"

[[mgr.prepend_keymap]]
on = ["g", "r"]
run = '''
  shell 'ya pub dds-cd --str "$(git rev-parse --show-toplevel)"' --confirm
'''
desc = "Jump to repo root"

[[mgr.prepend_keymap]]
on = ["l"]
run = "plugin smart-enter"
desc = "Enter the child directory, or open the file"

[[mgr.prepend_keymap]]
on = ["g", "q"]
run = 'shell -- qlmanage -p "$@"'
desc = "Preview with QuickLook"

[[mgr.prepend_keymap]]
on = ["C"]
run = "plugin ouch"
desc = "Compress with ouch"

[[mgr.prepend_keymap]]
on = ["c", "m"]
run = "plugin chmod"
desc = "Chmod on selected files"

[[mgr.prepend_keymap]]
on = ["c", "o"]
run = ["plugin copy-file-contents"]
desc = "Copy contents of file"

[[mgr.prepend_keymap]]
on = ["c", "r"]
run = "plugin path-from-root"
desc = "Copies path from git root"

[[mgr.prepend_keymap]]
on = "F"
run = "plugin smart-filter"
desc = "Smart filter"

[[mgr.prepend_keymap]]
on = ["L"]
run = "plugin bypass"
desc = "Recursively enter child directory, skipping children with only a single subdirectory"
