#
# Focusing
#

# directional
yabai < h : yabai -m window --focus west || yabai -m display --focus prev
yabai < j : yabai -m window --focus south
yabai < k : yabai -m window --focus north
yabai < l : yabai -m window --focus east || yabai -m display --focus next
yabai < r : source ~/.config/yabai/yabairc

# ordinal
yabai < n : yabai -m window --focus next || yabai -m display --focus next
yabai < p : yabai -m window --focus prev || yabai -m display --focus prev

# stacks
yabai < i : yabai -m window --focus stack.next
yabai < o : yabai -m window --focus stack.prev

# toggles
yabai < return : yabai -m window --toggle zoom-fullscreen && yabai -m window --raise
yabai < space : yabai -m window --toggle zoom-parent && yabai -m window --raise

# space
yabai < 1 : yabai -m space --focus 1
yabai < 2 : yabai -m space --focus 2
yabai < 3 : yabai -m space --focus 3
yabai < 4 : yabai -m space --focus 4
yabai < 5 : yabai -m space --focus 5
yabai < 6 : yabai -m space --focus 6
yabai < 7 : yabai -m space --focus 7
yabai < 8 : yabai -m space --focus 8
yabai < 9 : yabai -m space --focus 9
yabai < f : yabai -m space --focus next
yabai < b : yabai -m space --focus prev

#
# Swapping
#

# directional
yabai < shift - h : yabai -m window --swap west || (yabai -m window --display prev && yabai -m display --focus prev)
yabai < shift - j : yabai -m window --swap south
yabai < shift - k : yabai -m window --swap north
yabai < shift - l : yabai -m window --swap east || (yabai -m window --display next && yabai -m display --focus next)

# ordinal
yabai < shift - n : yabai -m window --swap next || (yabai -m window --display next && yabai -m display --focus next)
yabai < shift - p : yabai -m window --swap prev || (yabai -m window --display prev && yabai -m display --focus prev)

# stacks
yabai < shift - i : yabai -m window --swap stack.next || yabai -m window --swap stack.first
yabai < shift - o : yabai -m window --swap stack.prev || yabai -m window --swap stack.last

# spaces
yabai < shift - 1 : yabai -m window --space 1
yabai < shift - 2 : yabai -m window --space 2
yabai < shift - 3 : yabai -m window --space 3
yabai < shift - 4 : yabai -m window --space 4
yabai < shift - 5 : yabai -m window --space 5
yabai < shift - 6 : yabai -m window --space 6
yabai < shift - 7 : yabai -m window --space 7
yabai < shift - 8 : yabai -m window --space 8
yabai < shift - 9 : yabai -m window --space 9
yabai < shift - f : yabai -m window --space next
yabai < shift - b : yabai -m window --space prev

#
# Warping
#

# directional
yabai < ctrl - h : yabai -m window --warp west || (yabai -m window --display prev && yabai -m display --focus prev)
yabai < ctrl - j : yabai -m window --warp south
yabai < ctrl - k : yabai -m window --warp north
yabai < ctrl - l : yabai -m window --warp east || (yabai -m window --display next && yabai -m display --focus next)

# ordinal
yabai < ctrl - n : yabai -m window --warp next || (yabai -m window --display next && yabai -m display --focus next)
yabai < ctrl - p : yabai -m window --warp prev || (yabai -m window --display prev && yabai -m display --focus prev)

# stacks
yabai < ctrl - i : yabai -m window --stack next
yabai < ctrl - o : yabai -m window --stack prev

# mutations
yabai < ctrl - b : yabai -m space --balance
yabai < ctrl - e : yabai -m space --equalize
yabai < ctrl - x : yabai -m space --mirror x-axis
yabai < ctrl - y : yabai -m space --mirror y-axis
yabai < ctrl - 9 : yabai -m space --rotate 270
yabai < ctrl - 0 : yabai -m space --rotate 90
yabai < ctrl - 0x1B : if yabai -m query --windows --window | jq -re '."split-child" == "first_child"'; then yabai -m window --ratio rel:-0.05; else yabai -m window --ratio rel:+0.05; fi
yabai < ctrl - 0x18 : if yabai -m query --windows --window | jq -re '."split-child" == "first_child"'; then yabai -m window --ratio rel:+0.05; else yabai -m window --ratio rel:-0.05; fi
yabai < ctrl - u : yabai -m window --toggle float && yabai -m window --toggle float
