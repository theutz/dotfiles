# modes
:: default : sketchybar --bar color=0x15ffffff
:: yabai @ : sketchybar --bar color=0x88ff3333
f18 ; yabai
yabai < escape ; default
yabai < f18 ; default

:: gotop @ : sketchybar --bar color=0x8833ff33
yabai < g ; gotop

:: winp @ : sketchybar --bar color=0x8833ff33
yabai < ctrl - w ; winp

:: prevp @ : sketchybar --bar color=0x8833ff33
yabai < 0x1E ; prevp

:: nextp @ : sketchybar --bar color=0x8833ff33
yabai < 0x21 ; nextp

:: app @ : sketchybar --bar color=0x8833ff33
yabai < space ; app

gotop, winp, nextp, prevp, app < escape ; yabai
gotop, winp, nextp, prevp, app < f18 ; default

# =
ctrl + alt + cmd - 0x18 : yabai -m space --balance
yabai < 0x18 : yabai -m space --balance

# tab
yabai < tab : skhd -k "cmd - tab"
yabai < cmd - tab -> : 

# return
ctrl + alt + cmd - return : yabai -m window --toggle zoom-fullscreen
yabai < return : yabai -m window --toggle zoom-fullscreen

# space
ctrl + alt + cmd - space : yabai -m window --toggle zoom-parent
yabai < space : yabai -m window --toggle zoom-parent

# 0x21 [
ctrl + alt + cmd - 0x21 : $XDG_CONFIG_HOME/skhd/yabai/move_to_prev_display.sh

# 0x1E ]
ctrl + alt + cmd - 0x1E : $XDG_CONFIG_HOME/skhd/yabai/move_to_next_display.sh

# 1
yabai < 1 : yabai -m space --focus 1
app < 1 : open -a "1password"; skhd -k escape

# 2
yabai < 2 : yabai -m space --focus 2

# 3
yabai < 3 : yabai -m space --focus 3

# 4
yabai < 4 : yabai -m space --focus 4

# 5
yabai < 5 : yabai -m space --focus 5

# 6
yabai < 6 : yabai -m space --focus 6

# 7
yabai < 7 : yabai -m space --focus 7

# 8
yabai < 8 : yabai -m space --focus 8

# 9
yabai < 9 : yabai -m space --focus 9

# b
app < b : open -a "Arc"; skhd -k escape

# c
yabai < c : yabai -m space --create && sketchybar --update

# d
yabai < d : yabai -m space --destroy && sketchybar --update
prevp < d : yabai -m display --focus prev; skhd -k escape
prevp < shift - d : $XDG_CONFIG_HOME/skhd/yabai/move_to_prev_display.sh; skhd -k f18
nextp < d : yabai -m display --focus next; skhd -k escape
nextp < shift - d : $XDG_CONFIG_HOME/skhd/yabai/move_to_next_display.sh; skhd -k f18

# e
app < e : open -a "Canary Mail"; skhd -k escape

# g
gotop < g : yabai -m window --focus first
gotop < shift - g : yabai -m window --focus last

# h
ctrl + alt + cmd - h : $XDG_CONFIG_HOME/skhd/yabai/focus_prev_space.sh
yabai < h : $XDG_CONFIG_HOME/skhd/yabai/focus_prev_space.sh
yabai < shift - h : $XDG_CONFIG_HOME/skhd/yabai/move_to_prev_space.sh
yabai < cmd - h -> : echo "Hiding window"

# j
ctrl + alt + cmd - j : $XDG_CONFIG_HOME/skhd/yabai/focus_next_window.sh
yabai < j : $XDG_CONFIG_HOME/skhd/yabai/focus_next_window.sh
yabai < shift - j : yabai -m window --swap next || yabai -m window --swap first

# k
ctrl + alt + cmd - k : $XDG_CONFIG_HOME/skhd/yabai/focus_prev_window.sh
yabai < k : $XDG_CONFIG_HOME/skhd/yabai/focus_prev_window.sh
yabai < shift - k : yabai -m window --swap prev || yabai -m window --swap last

# m
app < m : open -a "Messages"; skhd -k escape

# l
ctrl + alt + cmd - l : $XDG_CONFIG_HOME/skhd/yabai/focus_next_space.sh
yabai < l : $XDG_CONFIG_HOME/skhd/yabai/focus_next_space.sh
yabai < shift - l : $XDG_CONFIG_HOME/skhd/yabai/move_to_next_space.sh

# n
ctrl + alt + cmd - n : $XDG_CONFIG_HOME/skhd/yabai/cycle_clockwise.sh
yabai < n : $XDG_CONFIG_HOME/skhd/yabai/cycle_clockwise.sh

# p
ctrl + alt + cmd - p : $XDG_CONFIG_HOME/skhd/yabai/cycle_counterclockwise.sh
yabai < p : $XDG_CONFIG_HOME/skhd/yabai/cycle_counterclockwise.sh

# q
yabai < q : skhd -k "cmd - w"

# r
ctrl + alt + cmd - r : yabai -m space --rotate 90
yabai < r : yabai -m space --rotate 90
yabai < shift - r : yabai -m space --rotate 270

# s
app < s : open -a "Slack"; skhd -k escape

# t
ctrl + alt + cmd - t : $XDG_CONFIG_HOME/skhd/yabai/move_to_next_display.sh
yabai < t : $XDG_CONFIG_HOME/skhd/yabai/move_to_next_display.sh
app < t : open -a "iTerm"; skhd -k escape

# v
winp < v : yabai -m window --toggle split

# w
yabai < w : skhd -k "cmd - h"
yabai < cmd - w -> : echo "Closing window"

# z
app < z : open -a "zoom.us"; skhd -k escape
