#
# Setup modes
#

:: default : yab mode default
:: yab @   : yab mode yab

#
# DEFAULT mode
#

f19                 ; yab
0x0A                ; yab
ctrl + alt - return ; yab

cmd + ctrl + alt - r : yab restart

#
# YAB mode
#

yab < 0x0A   ; default
yab < escape ; default
yab < f19    ; default

yab < 0x18           : yabai -m window --ratio rel:+0.05 # =
yab < 0x1B           : yabai -m window --ratio rel:-0.05 # -
yab < 1              : yab focus space 1
yab < 2              : yab focus space 2
yab < 3              : yab focus space 3
yab < 4              : yab focus space 4
yab < 5              : yab focus space 5
yab < 6              : yab focus space 6
yab < 7              : yab focus space 7
yab < 8              : yab focus space 8
yab < ctrl + alt - h : yab resize left 50
yab < ctrl + alt - j : yab resize down 50
yab < ctrl + alt - k : yab resize up 50
yab < ctrl + alt - l : yab resize right 50
yab < ctrl - b       : yabai -m space --balance
yab < ctrl - e       : yabai -m space --equalize
yab < ctrl - h       : yab warp window west
yab < ctrl - j       : yab warp window north
yab < ctrl - k       : yab warp window south
yab < ctrl - l       : yab warp window east
yab < ctrl - n       : yabai -m window --stack next
yab < ctrl - p       : yabai -m window --stack prev
yab < ctrl - q       : yabai -m space --layout bsp
yab < ctrl - s       : yabai -m space --layout stack
yab < f              : yabai -m space --mirror y-axis
yab < h              : yab focus window west
yab < j              : yab focus window south
yab < k              : yab focus window north
yab < l              : yab focus window east
yab < n              : yab focus window stack.next
yab < p              : yab focus window stack.prev
yab < r              : yabai -m space --rotate 90
yab < return         : yabai -m window --toggle zoom-fullscreen
yab < shift - 1      : yab move space 1
yab < shift - 2      : yab move space 2
yab < shift - 3      : yab move space 3
yab < shift - 4      : yab move space 4
yab < shift - 5      : yab move space 5
yab < shift - 6      : yab move space 6
yab < shift - 7      : yab move space 7
yab < shift - 8      : yab move space 8
yab < shift - f      : yabai -m space --mirror x-axis
yab < shift - h      : yab swap window west
yab < shift - j      : yab swap window north
yab < shift - k      : yab swap window south
yab < shift - l      : yab swap window east
yab < shift - r      : yabai -m space --rotate 270
yab < shift - tab    : yab move display next
yab < tab            : yab focus display next

