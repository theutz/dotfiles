#
# Setup modes
#

:: default : yab mode default
:: yab @   : yab mode yab
:: swap @  : yab mode swap
:: warp @  : yab mode warp

#
# DEFAULT mode
#

f19 ; yab
0x0A ; yab
cmd + ctrl + alt - return ; yab

#
# YAB mode
#

# Switching Modes
yab < f19 ; default
yab < 0x0A ; default
yab < escape ; default
yab < s ; swap
yab < w ; warp

# Restarting
yab < shift - r : yab restart

# Windows
yab < h : yab focus window west
yab < j : yab focus window south
yab < k : yab focus window north
yab < l : yab focus window east
yab < shift - h : yab focus space prev
yab < shift - j : yab focus window next
yab < shift - k : yab focus window prev
yab < shift - l : yab focus space next
yab < ctrl - h : yab swap window west
yab < ctrl - j : yab swap window south
yab < ctrl - k : yab swap window north
yab < ctrl - l : yab swap window east

#
# SWAP mode
#

# Switching modes
swap < escape ; yab
swap < f19 ; yab
swap < 0x0A ; yab

swap < h : yab swap window west
swap < j : yab swap window south
swap < k : yab swap window north
swap < l : yab swap window east

#
# WARP mode
#

# Switching modes
warp < escape ; yab
warp < f19 ; yab
warp < 0x0A ; yab

warp < h : yab warp window west
warp < j : yab warp window south
warp < k : yab warp window north
warp < l : yab warp window east
warp < r : yabai -m space --rotate 90
warp < shift - r : yabai -m space --rotate 270
warp < f : yabai -m space --mirror y-axis
warp < shift - f : yabai -m space --mirror x-axis
warp < e : yabai -m space --equalize
warp < b : yabai -m space --balance

# Local Variables:
# mode: sh
# End:
