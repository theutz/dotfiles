#
# Setup modes
#

:: default : yab mode default
:: yab @   : yab mode yab
:: yabx @  : yab mode yabx

#
# DEFAULT mode
#

f19 ; yab
0x0A ; yab
ctrl + alt - return ; yab

#
# YAB mode
#

yab < 0x0A ; default
yab < 0x18 : yabai -m window --ratio rel:+0.05 # =
yab < 0x1B : yabai -m window --ratio rel:-0.05 # -
yab < 1 : yab focus space 1
yab < 2 : yab focus space 2
yab < 3 : yab focus space 3
yab < 4 : yab focus space 4
yab < 5 : yab focus space 5
yab < 6 : yab focus space 6
yab < 7 : yab focus space 7
yab < 8 : yab focus space 8
yab < escape ; default
yab < f19 ; default
yab < h : yab focus window west --cycle
yab < j : yab focus window south --cycle
yab < k : yab focus window north --cycle
yab < l : yab focus window east --cycle
yab < s ; yabx
yab < tab : yab focus display next
yab < z : yabai -m window --toggle zoom-fullscreen

yab < shift - h : yab swap window west
yab < shift - j : yab swap window north
yab < shift - k : yab swap window south
yab < shift - l : yab swap window east
yab < shift - r : yab restart
yab < shift - tab : yab move display next

yab < ctrl - h : yab warp window west
yab < ctrl - j : yab warp window north
yab < ctrl - k : yab warp window south
yab < ctrl - l : yab warp window east

#
# YABX mode
#

# Switching modes
yabx < escape ; yab
yabx < f19 ; yab
yabx < 0x0A ; yab
yabx < s ; yabx

yabx < r : yabai -m space --rotate 90
yabx < shift - r : yabai -m space --rotate 270
yabx < f : yabai -m space --mirror y-axis
yabx < shift - f : yabai -m space --mirror x-axis
yabx < e : yabai -m space --equalize
yabx < b : yabai -m space --balance

# Local Variables:
# mode: sh
# End:
