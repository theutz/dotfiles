[program:glance]
command={{ .mise.exe }} exec go:github.com/glanceapp/glance -- glance --config {{ (joinPath .xdg.configDir "glance" "glance.yml") }}
user={{ .chezmoi.username }}
autostart=true
autorestart=true
redirect_stderr=true
stdout_logfile={{ joinPath .xdg.dataDir "glance" "glance.log" }}
stdout_logfile_maxbytes=50MB
stdout_logfile_backups=1
