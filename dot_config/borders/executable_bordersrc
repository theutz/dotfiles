#!/usr/bin/env bash

if [[ "$(dark-notify -e | nu --stdin -c 'str trim')" ]]; then
	options=(
		active_color=0xfff6c177
		inactive_color=0xff191724
		width=8.0
		style=round
	)
else
	options=(
		active_color=0xffea9d34
		inactive_color=0xff575279
		width=8.0
		style=round
	)
fi

borders "$options[@]"
