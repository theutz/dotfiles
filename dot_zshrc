# vim: ft=zsh

#
# Options
#

setopt AUTO_CD
setopt AUTO_PUSHD
setopt EXTENDED_GLOB

#
# Bindings
#

# Use vim-style key bindings
bindkey -v
bindkey -v '^?' backward-delete-char

#
# Autoload Functions
#
for func in "$HOME"/.local/functions/*(:t); do
  autoload -Uz $func
done

#
# Autocomplete
#

autoload -Uz compinit
compinit
# autoload -U +x bashcompinit && bashcompinit

# Enable path completion for multiple segments
zstyle ':completion:*' completer _complete _ignored _approximate

# Syntax Highlighting
source "$XDG_STATE_HOME"/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh #

#
# Third-party
#

# Starship
eval "$(starship init zsh)"

#
# Aliases
#

# Global

alias -g HELP='--help 2>&1 | ${(z)PAGER}'

# Normal

alias txe='tmuxp ls | gum filter | xargs -I{} nvim ~/.config/tmuxp/{}.yml'
alias txa="tmuxp ls | gum filter | xargs -I{} zsh -c 'tmuxp load -d {} && tmux switch -t {}'"
alias tmuxl="tmux ls -F '#S' | gum filter"
alias txa="tmux ls -F '#S' | gum choose | read session; tmux attach -t \$session"
alias lg='lazygit'
