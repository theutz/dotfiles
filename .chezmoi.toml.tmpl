encryption = "age"

[age]
	identity = "~/.config/chezmoi/key.txt"
	recipient = "age1y5xgp4msrrhylvla0hcm7srsfjeql56p4ugfwsl89wsjs92vkvts3u5xxa"

[git]
  autoCommit = true
  autoPush = false

[diff]
  pager = "delta"
  args = ["{{ "{{" }} .Destination {{ "}}"}}", "{{ "{{" }} .Target {{ "}}"}}"]
  exclude = ["scripts"]

[merge]
  command = "nvim"
  args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Source {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]

[hooks.apply.post]
  command = "tmux"
  args = ["source-file", "{{ .chezmoi.homeDir }}/.config/tmux/tmux.conf"]

