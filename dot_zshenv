export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
export XDG_CONFIG_DIRS=""
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_DATA_DIRS=""
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_RUNTIME_DIR="$TMPDIR"

export BROWSER='open'
export EDITOR='nvim'
export VISUAL='neovide --no-fork'
export PAGER='gum pager'
export MANPAGER='nvim -c +Man!'
export BAT_PAGER='${(z)PAGER:-less}'
export DELTA_PAGER='${(z)PAGER:-less}'

export LANG='en_US.UTF-8'

typeset -gU fpath path

export path=(
  $HOME/.local/bin
  $HOME/bin
  /opt/{homebrew,local}/{,s}bin(N)
  /usr/local/{,s}bin(N)
  $path
)

if (( $+commands[go] )); then
  export GOPATH="$(go env GOPATH)"
  export PATH="${GOPATH:-$HOME/go}"/bin:$PATH
fi

if (( $+commands[bob] )); then
  export PATH="${XDG_DATA_HOME:-$HOME/.local/share}"/bob/nvim-bin:$PATH
fi

if (( $+commands[composer] )); then
  export PATH="${XDG_CONFIG_HOME:-$HOME/.config}"/composer/vendor/bin:$PATH
fi

export fpath=(
  $HOME/.local/functions
  /opt/homebrew/share/zsh/site-functions
  $fpath
)

timezones=(
  US/Pacific
  # US/Central
  US/Eastern
  # GMT
  # Europe/London
  # Asia/Istanbul
)
export TZ_LIST=${(j:;:@)timezones}

export NB_DIR="$XDG_DATA_HOME/nb"
GUM_FILTER_FUZZY=false
