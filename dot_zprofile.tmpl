# vim: ft=sh.tmpl

# Secrets
if [[ -f "${ZDOTDIR:-$HOME}"/.zsecrets ]]; then
  source "${ZDOTDIR:-$HOME}"/.zsecrets
fi

# Browser
if [[ -z "$BROWSER" && "$OSTYPE" == darwin* ]]; then
  export BROWSER='open'
fi

# Editors
if [[ -z "$EDITOR" ]]; then
  export EDITOR='nvim'
fi
if [[ -z "$VISUAL" ]]; then
  # export VISUAL='neovide --no-fork'
  export VISUAL='nvim'
fi
HOMEBREW_EDITOR=vim

# Pagers
if [[ -z "$PAGER" ]]; then
  export PAGER='less'
fi
export MANPAGER='nvim -c +Man!'
export MANWIDTH='999'
export BAT_PAGER='less'
export DELTA_PAGER='less'

# Language
if [[ -z "$LANG" ]]; then
  export LANG='en_US.UTF-8'
fi

# Paths

# Ensure path arrays do not contain duplicates.
typeset -gU cdpath fpath mailpath path

# Set the list of directories that cd searches.
# cdpath=(
#   $cdpath
# )

# Set the list of directories that Zsh searches for programs.
path=(
  /opt/{homebrew,local}/{,s}bin(N)
  /usr/local/{,s}bin(N)
  $path
)

{{- if eq .chezmoi.os "darwin" }}
# Python
if (( $+commands[python3] )); then
  path=("$(brew --prefix)"/opt/python@3.12/libexec/bin $path)
fi
{{- end }}

# Neovim
if (( $+commands[bob] )); then
  path=("${XDG_DATA_HOME}"/bob/nvim-bin $path)
fi

# Golang
if (( $+commands[go] )); then
  export GOPATH="$(go env GOPATH)"
  path=("${GOPATH:-$HOME/go}"/bin $path)
fi

# PHP
if (( $+commands[composer] )); then
  path=("$XDG_CONFIG_HOME"/composer/vendor/bin $path)
fi

{{ if eq .chezmoi.os "darwin" }}
# Ruby
if [[ -x "$(brew --prefix)/opt/ruby/bin/ruby" ]]; then
  path=("$(brew --prefix)/opt/ruby/bin" $path)
fi
{{ end }}

path=(
  $HOME/.local/bin
  $HOME/bin
  $path
)

fpath=(
  $HOME/.local/functions
  /opt/homebrew/share/zsh/site-functions
  $fpath
)

# Less

# Set the default Less options.
# Mouse-wheel scrolling has been disabled by -X (disable screen clearing).
# Remove -X to enable it.
if [[ -z "$LESS" ]]; then
  export LESS='-g -i -M -R -S -w -X -z-4'
  export LESSKEY='$XDG_CONFIG_HOME/less/lesskey'
fi

# Set the Less input preprocessor.
# Try both `lesspipe` and `lesspipe.sh` as either might exist on a system.
if [[ -z "$LESSOPEN" ]] && (( $#commands[(i)lesspipe(|.sh)] )); then
  export LESSOPEN="| /usr/bin/env $commands[(i)lesspipe(|.sh)] %s 2>&-"
fi

# Rust
[[ -d "$HOME/.cargo" && -f "$HOME/.cargo/env" ]] && . "$HOME/.cargo/env"

# tmux
TMUX_CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/tmux"
