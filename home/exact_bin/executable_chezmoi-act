#!/usr/bin/env bash

set -euo pipefail

function choose() {
  fzf --multi \
    --exit-0 \
    --bind 'ctrl-a:toggle-all' \
    --bind 'start:select-all' \
    --prompt "$1" \
    --accept-nth "$HOME/{2}" \
    --nth '2..' \
    --print0 \
    --preview "chezmoi diff $HOME/{2}"
}

function main() {
  if
    chezmoi status --include templates |
      rg '^MM' |
      choose "Merge templates: " |
      xargs --null \
        --no-run-if-empty \
        pueue add -- chezmoi merge
  then
    gum spin --title "Merging..." -- pueue wait
  else
    gum log -l info "No templates to merge."
  fi

  if
    chezmoi status --exclude templates |
      rg '^MM' |
      choose "Re-add: " |
      xargs --null \
        --no-run-if-empty \
        pueue add -- chezmoi re-add
  then
    gum log -l info "No files to re-add."
  else
    gum spin --title "Re-adding..." -- pueue wait
  fi

  if
    chezmoi status --exclude templates |
      rg '^DA' |
      choose "Forget missing: " |
      xargs --null \
        --no-run-if-empty \
        pueue add -- chezmoi forget --force
  then
    gum spin --title "Forgetting..." -- pueue wait
  else
    gum log -l info "No files to forget."
  fi

  if
    chezmoi status --exclude templates |
      rg '^ D' |
      choose "Add deleted: " |
      xargs --null \
        --no-run-if-empty \
        pueue add -- chezmoi add
  then
    gum spin --title "Adding..." -- pueue wait
  else
    gum log -l info "No files to add."
  fi

}

main
