#!/usr/bin/env zsh

export BORDER="rounded"
export PADDING="0 2"
export MARGIN="1 0 0 2"

cms="$(chezmoi status)"
gws="$(chezmoi git -- -c color.status=always status --short)"

if [[ -n "$cms" ]]; then
  cms="
  $(gum format -- '# Chezmoi Status')
  $(gum style -- "$cms")
  "
fi

if [[ -n "$gws" ]]; then
  gws="
  $(gum format -- '# Git Status')
  $(gum style -- "$gws")
  "
fi

gum join "$cms" "$gws"
