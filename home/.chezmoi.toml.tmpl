[git]
autoAdd = true
autoCommit = true
autoPush = true

{{ if lookPath "delta" -}}
[diff]
pager = "delta"
args = ["{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]
exclude = ["scripts"]
{{- end }}

{{ if lookPath "nvim" }}
[merge]
command = "nvim"
args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Source {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]

[edit]
command = "nvim"
args = ["-c", "cd {{ .chezmoi.sourceDir }}"]
watch = false
apply = true
{{ end }}

