# edit config files »»»
alias e-zsh='chezmoi edit --watch --apply ~/.z{alias,sh{env,rc},log{in,out},preztorc,profile}; exec zsh'
alias e-nvim='chezmoi edit --watch --apply ~/.config/nvim'
alias e-tmux='chezmoi edit --watch --apply ~/.config/tmux.conf'
#  «««

function readme() {
  brew info "$1" --json |
    jq -r '.|first|.homepage' |
    sed -e 's|https\{0,1\}://||' |
    xargs glow -p
}
