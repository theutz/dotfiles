#!/usr/bin/env -S nu --config ~/.config/nushell/config.nu

use xdg

let path = xdg config spotify-player app.toml
let cfg = open $path

$cfg
| upsert theme {||
  match (dark-mode status | str trim) {
    off => "Catppuccin-latte",
    _ => "Catppuccin-mocha",
  }
}
| save -f $path
| chezmoi re-add $path
